{
  "name": "be-a-savior",
  "version": "1.0.0",
  "main": "dist/server.js",
  "private": true,
  "description": "Be a Savior Server",
  "repository": "git@github.com:HallexCosta/be-a-savior-server.git",
  "author": "HallexCosta <hallex.costa@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "install:ci": "yarn install --fronzen-lockfile",
    "test:unit": "cross-env NODE_ENV=test mocha --config .mocharc.unit.js",
    "test:integration": "cross-env NODE_ENV=test mocha --config .mocharc.integration.js",
    "test:unit:watch": "cross-env NODE_ENV=test yarn test:unit --watch",
    "clean": "rimraf dist",
    "clean:database": "rimraf src/database/database.sqlite && yarn typeorm:development migration:run",
    "compile": "yarn clean && tsc --project tsconfig.production.json",
    "build": "yarn clean && sucrase -r tsconfig-paths/register ./src -d ./dist --transforms typescript,imports",
    "typeorm": "cross-env NODE_ENV=production yarn ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:development": "cross-env NODE_ENV=development yarn ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "start:production": "cross-env NODE_ENV=production node dist/server.js",
    "start:development:watch": "cross-env NODE_ENV=development nodemon -L",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "postinstall": "link-module-alias"
  },
  "_moduleAliasIgnoreWarning": true,
  "_moduleAliases": {
    "@middlewares": "./dist/middlewares",
    "@entities": "./dist/entities",
    "@repositories": "./dist/repositories",
    "@controllers": "./dist/controllers",
    "@services": "./dist/services",
    "@providers": "./dist/providers",
    "@routes": "./dist/routes",
    "@common/configs": "./dist/common/configs",
    "@app": "./dist/app.js"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "link-module-alias": "^1.2.0",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "stripe": "^8.168.0",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/dirty-chai": "^2.0.2",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.7",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mocha": "^8.2.3",
    "@types/sinon": "^10.0.4",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "deep-equal-in-any-order": "^1.1.15",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^5.5.3",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sucrase": "^3.20.0",
    "supertest": "^6.1.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
